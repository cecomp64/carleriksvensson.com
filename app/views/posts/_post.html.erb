<div id="post_content">
  <h1><%= @post.title %></h1>
  <div class="byline">
    By <%= @post.user.name.titleize %> @ <%= @post.posted_on.strftime("%B %-d, %Y") %>
  </div>

  <%= @post.content.html_safe %>

  <% if is_admin? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  <%end%>

</div>
