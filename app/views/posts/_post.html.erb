<div id="post_content">
  <h1><%= @post.title %></h1>
  <div class="byline">
    By <%= @post.user.name.titleize %> @ <%= @post.posted_on ? @post.posted_on.strftime("%B %-d, %Y") : "Unpublished" %>
  </div>

  <%= parse_post(@post.content).html_safe %>

  <% if is_admin? %>
    <p>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
    </p>
  <%end%>

</div>
