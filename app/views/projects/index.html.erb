<% #provide(:title_text, '[' +  link_to('All Projects', projects_path).html_safe + ']') %>
<% 
  if (@tags)
    provide(:title_text, link_to('[ All Projects ]', projects_path))
    title = "Projects [ "

    @tags.each do |tag|
      title += url2tag(tag).titleize + " "
    end

    provide(:title, "#{title}]" )
  else
    provide(:title, "Projects")
  end
%>

<% if @projects.size > 0 %>
  <div id="project-tiles">
  <% @projects.each do |project| %>
    <% @project = project %>
    <%= render "project" %>
  <% end %>
  </div>
<% else %>
  <p class="proj_edit">
    No projects to disaply, yet.  Please try <%= link_to 'All Projects', projects_path  %>
  </p>
<% end %>

<p class="proj_edit">
<% if is_admin? %>
  <%= link_to 'New Project', new_project_path %> |
<% end %>
</p>

